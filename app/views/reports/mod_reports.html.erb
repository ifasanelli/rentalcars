<h2 class="etc-pdn-vert">Relatório de locação - Modelos</h2>

<%= form_tag reports_mod_results_path do %>

  <div class="form-group row">
    <%= label_tag :start_date, 'Data inicial', class:"col-sm-1" %>
    <%= date_field_tag :start_date, class:"form-control col-sm-3"  %>
  </div>

  <div class="form-group row">
    <%= label_tag :end_date, 'Data final', class:"col-sm-1" %>
    <%= date_field_tag :end_date, class:"form-control col-sm-3"  %>
  </div>

  <div class="form-group row">
    <%= label_tag :model, 'Modelos', class:"col-sm-1" %>
    <%= select_tag :model, options_from_collection_for_select(@car_models, "id", "name"), include_blank: true, disabled: @condition %>
  </div>

  <div class="form-group row">
    <div class="col-sm-5 etc-pdn-vert2">
        <%= submit_tag 'Baixar', class: "btn btn-dark" %>
    </div>
  </div>

<% end %>


