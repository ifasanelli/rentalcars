<h2 class="etc-pdn-vert">Modelo</h2>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Motorização</th>
      <th scope="col">Ano</th>
      <th scope="col">Tipo combustível</th>
      <th scope="col">Categoria</th>
      <th scope="col">fabricante</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @car_model.name %></td>
      <td><%= @car_model.motorization%></td>
      <td><%= @car_model.year %></td>
      <td><%= @car_model.fuel_type %></td>
      <td><%= @car_model.car_category.name %></td>
      <td><%= @car_model.manufacturer.name %></td>
    </tr>
  </tbody>
</table>

<div class="col-sm-5 etc-pdn-top">
    <%= link_to 'Editar', edit_car_model_path(@car_model), class:"btn btn-warning" %>
    <%= link_to 'Deletar', car_model_path(@car_model), method: :delete, class: "btn btn-danger", data: { confirm: 'Quer apagar este modelo?' } %>
    <%= link_to 'Voltar', car_models_path, class:"btn btn-outline-dark" %>
</div>