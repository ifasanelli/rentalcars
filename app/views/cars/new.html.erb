<h2>Novo carro</h2>

<%= form_for @car do |f| %>
  <div class="form-group row">
    <%= f.label :license_plate, 'Placa', class:"col-sm-2" %>
    <%= f.text_field :license_plate, class:"form-control col-sm-8" %>
  </div>
  <div class="form-group row">
    <%= f.label :color, 'Cor', class:"col-sm-2" %>
    <%= f.text_field :color, class:"form-control col-sm-8" %>
  </div>
  <div class="form-group row">
    <%= f.label :mileage, 'Quilometragem', class:"col-sm-2" %>
    <%= f.text_field :mileage, class:"form-control col-sm-8" %>
  </div>
  <div class="form-group row">
    <%= f.label :car_model_id, 'Modelo', class:"my-1 mr-2" %>
    <%= f.collection_select(:car_model_id, @car_models, :id, :name, class:"custom-select my-1 mr-sm-2") %>
  </div>
  <div class="form-group row">  
    <%= f.label :subsidiary_id, 'Filial', class:"my-1 mr-2" %>
    <%= f.collection_select(:subsidiary_id, @subsidiaries, :id, :name, class:"custom-select my-1 mr-sm-2") %>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
        <%= f.submit 'Salvar', class: "btn btn-dark" %>
    </div>
  </div>
<% end %>


<%= link_to 'Voltar', cars_path, class:"btn btn-outline-dark etc-pdn-horz" %>