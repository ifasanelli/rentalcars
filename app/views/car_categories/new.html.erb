<h2>Nova categoria</h2>

<%= form_for @car_category do |f| %>
  <div class="form-group row">
    <%= f.label :name, 'Nome', class:"col-sm-2" %>
    <%= f.text_field :name, class:"form-control col-sm-8" %>
  </div>
    <div class="form-group row">
    <%= f.label :daily_rate, 'Diária', class:"col-sm-2" %>
    <%= f.text_field :daily_rate, class:"form-control col-sm-8" %>
  </div>
    <div class="form-group row">
    <%= f.label :car_insurance, 'Seguro', class:"col-sm-2" %>
    <%= f.text_field :car_insurance, class:"form-control col-sm-8" %>
  </div>
    <div class="form-group row">
    <%= f.label :third_party_insurance, 'Seguro para terceiros', class:"col-sm-2" %>
    <%= f.text_field :third_party_insurance, class:"form-control col-sm-8" %>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
        <%= f.submit 'Salvar', class: "btn btn-dark" %>
    </div>
  </div>
<% end %>

<div class="col-sm-10">
    <% if @car_category.errors.any?%>
        <p>Você deve corrigir os erros para continuar:</p>
        
        <% @car_category.errors.full_messages.each do |message|  %>
            <p><%= message %></p>
        <% end %>
    <% end %>
</div>

<%= link_to 'Voltar', car_categories_path, class:"btn btn-outline-dark etc-pdn-horz" %>