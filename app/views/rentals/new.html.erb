<h2 class="etc-pdn-vert">Nova Locação</h2>

<%= form_for @rental do |f| %>
    <div class="form-group row">
        <%= f.label :start_date, 'Data inicial', class:"col-sm-1" %>
        <%= f.date_field :start_date, class:"form-control col-sm-3"  %>
    </div>
    <div class="form-group row">
        <%= f.label :end_date, 'Data final', class:"col-sm-1" %>
        <%= f.date_field :end_date, class:"form-control col-sm-3" %>
    </div>
    <div class="form-group row">
        <%= f.label :client_id, 'Cliente', class:"col-sm-1" %>
        <%= f.collection_select :client_id, @clients, :id, :description, class:"form-control col-sm-10" %>
    </div>
    <div class="form-group row">
        <%= f.label :car_category_id, 'Categoria', class:"col-sm-1" %>
        <%= f.collection_select :car_category_id, @car_categories, :id, :name, class:"form-control col-sm-10" %>
    </div>
    <div class="form-group row">
        <div class="col-sm-5">
            <%= f.submit 'Agendar', class: "btn btn-dark" %>
        </div>
    </div>
<% end %>
