<h2 class="etc-pdn-vert">Editar filial</h2>

<%= form_for @subsidiary do |f| %>
  <div class="form-group row">
    <%= f.label :name, 'Nome', class:"col-sm-1" %>
    <%= f.text_field :name, class:"form-control col-sm-10" %>
  </div>
    <div class="form-group row">
    <%= f.label :cnpj, 'CNPJ', class:"col-sm-1" %>
    <%= f.text_field :cnpj, class:"form-control col-sm-10" %>
  </div>
    <div class="form-group row">
    <%= f.label :address, 'Endereço', class:"col-sm-1" %>
    <%= f.text_field :address, class:"form-control col-sm-10" %>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
        <%= f.submit 'Salvar', class: "btn btn-dark" %>
    </div>
  </div>
<% end %>

<div class="col-sm-10">
    <% if @subsidiary.errors.any?%>
        <p>Você deve corrigir os erros para continuar:</p>
        
        <% @subsidiary.errors.full_messages.each do |message|  %>
            <p><%= message %></p>
        <% end %>
    <% end %>
</div>

<%= link_to 'Voltar', subsidiaries_path, class:"btn btn-outline-dark etc-pdn-horz" %>