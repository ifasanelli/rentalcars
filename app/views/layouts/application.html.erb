<!DOCTYPE html>
<html>
  <head>
    <title>Rental Cars</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="http://localhost:3000/">Rental Cars</a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <span class="nav-link">Olá, <%= current_user.email %></span><span class="sr-only">(current)</span>
            </li>
            <li class="nav-item active">
              <%= link_to 'Fabricantes', manufacturers_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
            <li class="nav-item active">
              <%= link_to 'Filiais', subsidiaries_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
            <li class="nav-item active">
              <%= link_to 'Categorias', car_categories_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
            <li class="nav-item active">
              <%= link_to 'Modelos', car_models_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>            
            <li class="nav-item active">
              <%= link_to 'Clientes', clients_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>           
            <li class="nav-item active">
              <%= link_to 'Locações', rentals_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
            <li class="nav-item active">
              <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
          <% else %>
            <li class="nav-item active">
              <%= link_to 'Entrar', new_user_session_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
          <% end %>
        </ul>
        <% if current_page?(rentals_path) %>
          <%= yield :busca %>
        <% end %>
      </div>
    </nav>

    <p class="notice etc-pdn"><%= notice %></p>
    <p class="alert etc-pdn"><%= alert %></p>

    <%= yield %>
  </body>
</html>