<h1>Editar fabricante</h1>

<%= form_for @manufacturer do |f| %>
  <div class="form-group row">
    <%= f.label :name, 'Nome:', class:"col-sm-1" %>
    <%= f.text_field :name, class:"form-control col-sm-2" %>
  </div>
  <div class="form-group row">
    <div class="col-sm-5">
        <%= f.submit 'Salvar', class: "btn btn-dark" %>
    </div>
  </div>
<% end %>

<%= link_to 'Voltar', manufacturers_path, class:"btn btn-outline-dark etc-pdn-horz" %>